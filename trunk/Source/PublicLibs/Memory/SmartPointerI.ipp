template <typename Type>
SmartPointerI<Type>::~SmartPointerI(){
    if (m_ptr != nullptr){
        delete m_ptr;
    }
}
template <typename Type>
void SmartPointerI<Type>::clear(){
    if (m_ptr != nullptr){
        delete m_ptr;
        m_ptr = nullptr;
    }
}
template <typename Type>
template <class... Args>
SmartPointerI<Type>::SmartPointerI(Args&&... args){
    reset(std::forward<Args>(args)...);
}
template <typename Type>
template <class... Args>
void SmartPointerI<Type>::reset(Args&&... args){
    clear();
    m_ptr = new Type(std::forward<Args>(args)...);
}
